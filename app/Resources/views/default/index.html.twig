<title>MACQ la boutik</title>
{% block body %}

    <div id="Accueil" >
        <div class="heading">
            <p class="beginning">
                MACQ
            </p>
            <p class="title">
                MACQ
                <br> La boutik </br>
            </p>
        </div>

        <div class="container-fixed-bottom">
            <span> <img src="" alt=""></span>
            <div class="wrap">
                <a class="ib" href="/boutique"><div class ="line"></div><span class ="tip">I'm a popup...</span></a>
                <a href="/apropos"><div></div></a>
                <a href="/mortuaire"><div></div></a>
                <a href="/contact"><div></div></a>
                <a href="/offreservice"><div></div></a>
            </div>
        </div>

    </div>

{% endblock %}


{% block stylesheets %}
    <style>
        h2{
            display: none;
        }
        #Accueil {
            height: 200px;
            position: relative;

        }

        #Accueil input {
            display: block;
            margin: auto;
            position: absolute;
            top: 143%;
            left: 42%;
            width: 180px;
            height: 90px;

        }
        /* radial  menu */
        body,html{margin:0;padding:0;height:100%;}
        body{
            background:#FFFFFF;
            height:100%
        }
        .wrap{
            position:relative;
            width: 80vmin;
            height: 80vmin;
            margin:0 auto;
            background:inherit;
            transform:scale(0.2) translatez(0px);
            opacity:0;
            transition:transform .5s, opacity .5s;
        }
        a{
            position:absolute;
            left:0; top:0;
            width:47.5%; height:47.5%;
            overflow:hidden;
            transform:scale(.5) translateZ(0px);
            background:#585247;
        }
        a div{
            height:100%;
            background-size:cover;
            opacity:.5;
            transition:opacity .5s;
            border-radius:inherit;
        }
        a:nth-child(1){;
            background-size:cover;
            border-radius:inherit;
        }
        a:nth-child(1){
            border-radius:40vmin 0 0 0;
            transform-origin: 110% 110%;
            transition:transform .4s .15s;
        }
        a:nth-child(1) div{
            background-color:darkblue;
        }
        a:nth-child(2){
            border-radius:0 40vmin 0 0;
            left:52.5%;
            transform-origin: -10% 110%;
            transition:transform .4s .2s;
        }
        a:nth-child(2) div{
            background-color:red;
        }
        a:nth-child(3){
            border-radius:0 0 0 40vmin;
            top:52.5%;
            transform-origin: 110% -10%;
            transition:transform .4s .25s;
        }
        a:nth-child(3) div{
            background-color:yellow;
        }
        a:nth-child(4){
            border-radius:0 0 40vmin 0;
            top:52.5%; left:52.5%;
            transform-origin: -10% -10%;
            transition:transform .4s .3s;
        }
        a:nth-child(4) div{
            background-color:greenyellow;
            border-radius:40vmin 1 1 1;
            transform-origin: 110% 110%;
            transition:transform .4s .15s;
        }
        a:nth-child(1) div{
            background-image:none;
        }
        a:nth-child(2){
            border-radius:0 40vmin 0 0;
            left:52.5%;
            transform-origin: -10% 110%;
            transition:transform .4s .2s;
        }
        a:nth-child(2) div{
            background-image:none;
        }
        a:nth-child(3){
            border-radius:0 0 0 40vmin;
            top:52.5%;
            transform-origin: 110% -10%;
            transition:transform .4s .25s;
        }
        a:nth-child(3) div{
            background-image:none;
        }
        a:nth-child(4){
            border-radius:0 0 40vmin 0;
            top:52.5%; left:52.5%;
            transform-origin: -10% -10%;
            transition:transform .4s .3s;
        }
        a:nth-child(4) div{
            background-image:none;
        }
        a:nth-child(5){
            width:55%;height:55%;
            left:22.5%; top:22.5%;
            border-radius:50vmin;
            box-shadow:0 0 0 5vmin #FFFFFF;
            transform:scale(1);
            
        }
        a:nth-child(5) div{
            background-color:fuchsia;
        }
        span{
            position:relative;
            display:block;
            margin:0 auto;
            top:50vmin;
            width:20vmin; height:20vmin;
            border-radius:100%;
            background-color:blanchedalmond;
            transform:translateZ(0px);
        }
        span span{
            position:absolute;
            width:60%;height:3px;
            background-color:blanchedalmond;
            left:20%; top:50%;
            border-radius:0;
        }
        span span:after, span span:before{
            content:'';
            position:absolute;
            left:0; top:-1.5vmin;
            width:100%; height:100%;
            background:inherit;
        }
        span span:after{
            top:1.5vmin;
        }
        span:hover + .wrap, .wrap:hover{
            transform:scale(.8) translateZ(0px);
            opacity:1;
        }
        span:hover + .wrap a, .wrap:hover a{
            transform:scale(1) translatez(0px);
        }
        a:hover div{
            opacity:1;
            transform:translatez(0px);
        }

        /* Titre */

        .heading {
            width: 100%;
            height: 100vh;
        }
        body, html {
            margin: 0;
            font-family: 'century gothic', 'century gothic';
        }
        .beginning {
            font-family: 'century gothic', 'century gothic';
            word-break:keep-all;
            overflow:hidden;
            text-transform: uppercase;
            color: transparent;
            animation-name: fadein-1;
            animation-duration: 4s;
            animation-iteration-count: 1;
            font-size:4em;
            animation-timing-function: ease-in-out;
            width:100%;
            text-align:center;
        }
        .title {
            animation-name: fadein-2;
            word-break:keep-all;
            overflow:visible;
            color:transparent;
            font-size:5.8em;
            animation-duration: 8s;
            animation-iteration-count: 1;
            animation-fill-mode: forwards;
            width:100%;
            text-align:center;
        }
        .title a {
            color:inherit;
            text-decoration:none;
        }
        .beginning, .title {
            position: absolute;
            top: 20%;
            left: 50%;
            transform: translate(-50%, -50%);
        }
        @keyframes fadein-1 {
            0% {
                color: transparent;
                text-shadow:0 0 64px rgba(0,0,0,0);
                letter-spacing:10px;
            }
            25% {
                color: transparent;
                text-shadow:0 0 8px rgba(0,0,0,0.8);
            }
            60% {
                color: #dededf;
                text-shadow:0 0 0px rgba(0,0,0,1);
            }
            70% {
                color: #cdcecf;
                text-shadow:0 0 0px rgba(0,0,0,1);
                letter-spacing:0px;
            }
            100% {
                color: transparent;
                text-shadow:0 0 4px rgba(0,0,0,0);
                letter-spacing:5px;
            }
        }

        @keyframes fadein-2 {
            0 % {
                opacity:0!important;
                color:transparent;
                text-shadow:0 80px 64px rgba(0,0,0,0);
            }
            50% {
                opacity:0!important;
                color:transparent;
                text-shadow:0 30vh 64px rgba(0,0,0,0);
            }
            75% {
                opacity:1;
                color:transparent;
                text-shadow:0 0 4px rgba(0,0,0,.5);
            }
            100% {
                color:#000000;
            }
        }
        .beginning::-moz-selection {
            background-color:transparent;
        }
        .beginning::selection {
            background-color:transparent;
        }
        /* fin titre */

        .container-fixed-bottom{
            position: absolute;
            left: 0;
            right: 0;
            top: 95%;
        }
        @media screen and (min-width: 689px){
            .container-fixed-bottom{
                top: 10%;
            }
        }
    </style>


    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            window.setTimeout(function () {
                $(".show-home-title").fadeIn();
            }, 2000);
        });
    </script>
{% endblock %}